<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:fitsSystemWindows="true"

    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/top_image"
            android:layout_width="99.5dp"
            android:layout_height="97dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="@mipmap/login_icon_jy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_image"
            android:layout_marginLeft="@dimen/x55"
            android:layout_marginRight="@dimen/x55"
            android:layout_marginTop="@dimen/y218">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y420"
                android:background="@mipmap/denglukuang"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/account_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:layout_marginLeft="@dimen/x90"
                    android:layout_marginRight="@dimen/x90"
                    android:layout_marginTop="@dimen/y100">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1"
                        android:layout_alignParentBottom="true"
                        android:background="#F0F0F0" />

                    <EditText
                        android:id="@+id/ed_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:drawableLeft="@mipmap/user"
                        android:drawablePadding="@dimen/x15"
                        android:hint="@string/username"
                        android:textColor="#999999"
                        android:textColorHint="#999999"
                        android:textCursorDrawable="@drawable/login_cursor"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:layout_marginLeft="@dimen/x90"
                    android:layout_marginRight="@dimen/x90"
                    android:layout_marginTop="@dimen/y40">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1"
                        android:layout_alignParentBottom="true"
                        android:background="#F0F0F0" />

                    <EditText
                        android:id="@+id/ed_password"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y20"
                        android:background="@null"
                        android:drawableLeft="@mipmap/password"
                        android:drawablePadding="@dimen/et_padding"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:textColor="#999999"
                        android:textColorHint="#999999"
                        android:textCursorDrawable="@drawable/login_cursor"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:textAllCaps="false"
                android:id="@+id/bt_login"
                android:layout_width="@dimen/x440"
                android:layout_height="@dimen/y100"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y370"
                android:background="@drawable/shape"
                android:gravity="center"
                android:text="@string/login"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/framelayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y70"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:text="@string/register"
                android:textColor="#2FA3EC"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="@dimen/y1"
                android:layout_height="match_parent"
                android:background="#2FA3EC" />

            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="@string/forget_password"
                android:textColor="#2FA3EC"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
