<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sign1"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_marginTop="15dp"
        android:layout_gravity="right|top"
        android:background="@mipmap/sign_close"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_dialog_white"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/fl_top"
            android:background="@mipmap/notice_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/update"
            android:orientation="vertical">

            <FrameLayout
                android:layout_alignParentBottom="true"
                android:layout_marginRight="23dp"
                android:layout_marginLeft="23dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_middle"
                    android:background="@mipmap/sign_date"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
                <TextView
                    android:layout_gravity="center"
                    android:textSize="19sp"
                    android:textColor="#4294ea"
                    android:id="@+id/tv_notice_title"
                    android:gravity="center"
                    android:text="2018-04-08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_notice_content"
            android:layout_gravity="bottom|center_horizontal"
            android:textSize="16sp"
            android:textColor="#666666"
            android:lineSpacingExtra="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:text="2018-04-08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
