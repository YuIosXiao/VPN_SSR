<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@mipmap/app_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:id="@+id/ll_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="40dp"
        android:background="@mipmap/juxing"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_sign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x94"
                    android:layout_height="@dimen/y94"
                    android:layout_gravity="center"
                    android:background="@mipmap/btom_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="center"
                    android:text="@string/clock_in"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_Recharge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x94"
                    android:layout_height="@dimen/y94"
                    android:layout_gravity="center"
                    android:background="@mipmap/btom_icon2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="center"
                    android:text="@string/a42"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x94"
                    android:layout_height="@dimen/y94"
                    android:layout_gravity="center"
                    android:background="@mipmap/btom_icon1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10"
                    android:gravity="center"
                    android:text="@string/a43"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_main_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/iv_personal"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_weight="0"
            android:background="@mipmap/gerenzhognxin" />

        <LinearLayout
            android:id="@+id/ll_menu_recharge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_main_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/elites_user_diamondbg"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="260+"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_menu_service"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/ll_main_tab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y54"
        android:background="@mipmap/lan"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ll_mian_tab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="当前服务:精英特权"
            android:textColor="#ffffff"
            android:textSize="@dimen/mjh" />

        <ImageView
            android:id="@+id/iv_main_xuanze"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:background="@mipmap/btn_icon2" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_main_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_menu_service"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y30"
        android:gravity="center"
        android:text="2018-05-25"
        android:textColor="#ffffff"
        android:textSize="16sp" />
    <!--<com.wwws.wwwsvpn.myapplication.view.PathView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/ll_menu_service"
        android:layout_centerHorizontal="true"
        android:id="@+id/pathView"
        app:pathColor="@android:color/holo_blue_light"
        app:pathWidth="5dp"
        app:svg="@raw/monitor"/>  -->
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/fl_btn"
        android:background="@mipmap/btn_jy_bg"
        android:layout_marginBottom="@dimen/main_vpnbtn_margin_bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="192dp"
        android:layout_height="192dp">
    <Button

        android:id="@+id/bt_connect"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/btn_icon1"
        android:textColor="#ffffff"
        android:textSize="28sp" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/connecting_anim"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/btn_jy_mid"
        android:textColor="#ffffff"
        android:textSize="28sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/y40"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/main_state_margin_bottom"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/lan_connet" />



</RelativeLayout>
</FrameLayout>